<div class='card'>
  <%= link_to(category) do %>
    <div class='container'>
      <div class='image'>
        <%= (product = category.sample_product) &&
            image_tag(product.image, alt: product.name) %>
      </div>
      <div class='content'>
        <h4><%= category.name %></h4>
      </div>
    </div>
  <% end %>
</div>
